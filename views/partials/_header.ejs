<body style="font-size:20px; padding:30px;">

	<div class="row">

		<div class="col-md-6">
  
			<h1 style="margin-left:10px;">TinyURL</h1>

		</div>


	<div class="col-md-6">

		<% if(username){ %>

			<form class="form-inline" action="/logout" method="POST" style="float:right; margin-right:160px; margin-top:-25px;">
      			<div class="form-group mb-2">
        		<label for="LOGOUT"><p class="lead" style="margin-top:12px; font-size:16px">Welcome back, <strong><%= username %></strong></p></label>
        	<button type="submit" class="btn btn-warning btn-sm" style="margin: 1em">LOGOUT</button>
    </div>


	<% } else{ %>  
		<form class="form-inline" action="/login" method="POST" style="float:right; margin-right:165px; margin-top:-30px;">
      	<div class="form-group mb-2">
        <input class="form-control" type="text" name="username" style="width: 250px; margin: 1em" placeholder="Enter Username">
        <button type="submit" class="btn btn-warning btn-sm">LOGIN</button>
      </div>
	</form>
<% } %>

</div>

</div>
</body>



